<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="15dp"
    android:id="@+id/notice_view_type_0">

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="@dimen/notification_photo_size"
        android:layout_height="@dimen/notification_photo_size"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/notification_text_size"
                android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Title"
                android:text="贤生"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/notification_time_text_size"
                android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Time"
                tools:text="10:23"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_font_size"
            android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Info"
            tools:text="今天我又摔个狗吃屎"
            android:maxLines="2"
            android:maxLength="15"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            android:singleLine="true"/>

    </LinearLayout>

</LinearLayout>