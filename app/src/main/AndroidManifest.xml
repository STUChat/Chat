            <!--</intent-filter>-->
        </activity>
        <activity android:name=".view.activity.WelcomeActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.RegisterActivity" />
        <activity android:name=".view.activity.LoginActivity"></activity>
        <activity android:name=".view.activity.ForgotActivity"></activity>
        <activity android:name=".view.activity.SearchFriendActivity"></activity>
        <activity android:name=".view.api.BaseActivity"></activity>
